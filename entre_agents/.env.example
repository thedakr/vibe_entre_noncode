# VEntre Agent System Configuration
# Copy this file to .env and fill in your values

# ======================
# API Keys (REQUIRED)
# ======================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (Optional - only if using OpenAI)
# Get from: https://platform.openai.com/
# OPENAI_API_KEY=your_openai_api_key_here

# ======================
# Database Configuration
# ======================

# Database type: "sqlite" for local, "postgresql" for cloud
DATABASE_TYPE=sqlite

# SQLite database path (for local)
DATABASE_PATH=data/ventre.db

# PostgreSQL connection URL (for cloud)
# Example: postgresql://user:password@localhost:5432/ventre_db
# DATABASE_URL=postgresql://user:password@localhost:5432/ventre_db

# ======================
# LLM Settings
# ======================

# LLM provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic

# Specific model (leave blank for default)
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
# OpenAI: gpt-4-turbo-preview, gpt-4
# LLM_MODEL=

# Temperature (0-1, higher = more creative)
LLM_TEMPERATURE=0.7

# Maximum tokens in response
LLM_MAX_TOKENS=4096

# ======================
# Agent Settings
# ======================

# Your entrepreneur ID (username/identifier)
ENTREPRENEUR_ID=default_user

# Agent mode: "development" or "production"
AGENT_MODE=development

# ======================
# Logging
# ======================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/ventre.log
